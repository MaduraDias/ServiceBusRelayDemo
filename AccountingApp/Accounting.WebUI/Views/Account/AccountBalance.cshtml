<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/Site.css" />
@model Accounting.WebUI.Models.AccountViewModel
@{
    ViewBag.Title = "AccountBalance";
}
<div>
    <h1>Account Balance</h1>
    @using (Html.BeginForm("GetBalance", "Account", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.AccountNumber)
            @Html.TextBoxFor(x => x.AccountNumber, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.AccountBalance)
            <label>@string.Format("{0:C}", Model.AccountBalance)</label>
        </div>
        
        <button type="submit" class="btn btn-default"> Submit</button>
        
    }

</div>

